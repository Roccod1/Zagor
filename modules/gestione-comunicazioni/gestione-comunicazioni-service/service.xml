<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="it.servizidigitali.gestionecomunicazioni" auto-namespace-tables="false">
	<namespace/>
	
	<entity 
		name="Comunicazione"
		table="comunicazione"
		uuid="true"
		local-service="true" 
		remote-service="false" 
		data-source="servizidigitaliDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="comunicazioneId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="titolo" type="String" />
		<column name="descrizione" type="String" />
		<column name="dataInvio" type="Date" />
		<column name="dataInizio" type="Date" />
		<column name="dataFine" type="Date" />
		<column name="codiceServizio" type="String" />
		<column name="uriServizio" type="String" />
		
		<column name="tipologiaComunicazioneId" type="long" />
		<column name="organizationId" type="long" />
		<column name="destinatarioUserId" type="Long" />
		<column name="destinatarioOrganizationId" type="long" />
		<column name="calendarBookingId" type="long" />
		
		<!-- FK fields -->
		<!-- Finder methods -->
		<finder name="OrganizationId" return-type="Collection">
			<finder-column name="organizationId" />
		</finder>

		<finder name="TipologiaComunicazioneId" return-type="Collection">
			<finder-column name="tipologiaComunicazioneId" />
		</finder>

		<finder name="DestinatarioOrganizationId" return-type="Collection">
			<finder-column name="destinatarioUserId" />
		</finder>

		<finder name="DestinatarioUserId" return-type="Collection">
			<finder-column name="destinatarioOrganizationId" />
		</finder>
	</entity>
	
	<entity 
		name="TipologiaComunicazione"
		table="tipologia_comunicazione"
		uuid="false"
		local-service="true" 
		remote-service="false" 
		data-source="servizidigitaliDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="tipologiaComunicazioneId" primary="true" type="long" />

		<!-- Other fields -->
		<column name="nome" type="String" />
	</entity>
	
	<exceptions>
		<exception>ComunicazioneTitolo</exception>
		<exception>ComunicazioneDescrizione</exception>
		<exception>ComunicazioneOrganizzazione</exception>
	</exceptions>
</service-builder>