<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="it.servizidigitali.gestioneforms" auto-namespace-tables="false">
	<namespace/>
	<entity 
		name="Form"
		table="form"
		uuid="true"
		local-service="true" 
		remote-service="false" 
		data-source="servizidigitaliDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="formId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="nome" type="String" />
		<column name="descrizione" type="String" />
		<column name="codice" type="String" />
		<column name="json" type="String" />
		<column name="principale" type="boolean" />
		
		<!-- FK -->
		<column name="organizationId" type="long" />
		
		<!-- Order -->
		<order by="asc">
			<order-column name="nome" />
		</order>

		<!-- Finder methods -->
		<finder name="Codice" return-type="Form">
			<finder-column name="codice" />
		</finder>

		<finder name="Principale" return-type="Collection">
			<finder-column name="principale" />
		</finder>
	</entity>
	
	<entity 
		name="DefinizioneAllegato"
		table="definizione_allegato"
		uuid="true"
		local-service="true" 
		remote-service="false" 
		data-source="servizidigitaliDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="definizioneAllegatoId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="denominazione" type="String" />
		<column name="fileEntryId" type="long" />
		<column name="filenameModello" type="String" />
		<column name="tipiFileAmmessi" type="String" />
		<column name="codiciTipologiaDocumento" type="String" />
		<column name="obbligatorio" type="boolean" />
		<column name="eliminato" type="boolean" />
		
		<!-- FK -->
		<column name="organizationId" type="long" />	
		<column name="formId" type="long" />
		
		<!-- Finder methods -->
		<finder name="formIdAndEliminato" return-type="Collection">
			<finder-column name="formId" />
			<finder-column name="eliminato" />
		</finder>

	</entity>
	
	<entity 
		name="TipoDocumento"
		table="tipo_documento"
		uuid="true"
		local-service="true" 
		remote-service="false" 
		data-source="servizidigitaliDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="tipoDocumentoId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="codice" type="String" />
		<column name="nome" type="String" />
		<column name="descrizione" type="String" />
		<column name="categoria" type="String" />
		<column name="estensioniFile" type="String"/>
		<column name="stato" type="String" />
		<column name="numeroRequired" type="long"/>
		<column name="dataScadenzaRequired" type="long"/>
		
		<!-- FK -->
		<column name="organizationId" type="long" />	
		
		<!-- Finder methods -->
		<finder name="stato" return-type="Collection">
			<finder-column name="stato" />
		</finder>

	</entity>

</service-builder>