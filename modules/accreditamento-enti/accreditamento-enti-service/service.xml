<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="it.servizidigitali.accreditamentoenti" auto-namespace-tables="false">
	<namespace/>
	
	<entity 
		name="Ente"
		table="ente"
		uuid="true"
		local-service="true" 
		remote-service="false" 
		data-source="accreditamentoentiDataSource" 
		cache-enabled="true"
		>

		<!-- PK fields -->
		<column name="enteId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="denominazione" type="String" />
		<column name="strutturaRiferimento" type="String" />
		<column name="sitoWeb" type="String" />
		<column name="tipo" type="String" />
		<column name="codiceIPA" type="String" />
		<column name="pec" type="String" />

		<!-- Order -->
		<order by="asc">
			<order-column name="denominazione" />
		</order>
	</entity>
</service-builder>